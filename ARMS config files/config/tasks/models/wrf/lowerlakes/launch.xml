<?xml version="1.0" encoding="UTF-8"?>
<WRFRun>
  <comment>SWAN WRF model</comment>
  <topLevel>models/wrf/lowerlakes</topLevel>
  
  <startDate>DPAW_WRF_LOWERLAKES-START@timeline</startDate>
  <endDate>DPAW_WRF_LOWERLAKES-END@timeline</endDate>
  <runTimeMinMinutes>360</runTimeMinMinutes>
  <runTimeMaxMinutes>-1</runTimeMaxMinutes><!-- -1 as test. BB -->
  
  <RunConfiguration>
    <interval>21600</interval> <!-- Data source (WPS Input) frequency in seconds - 6 Hours -->

    <timestep>50</timestep>
    <restart>true</restart>
    
    <historyInterval>30</historyInterval> <!-- Output frequency of frames in minutes -->
    
    <!-- The follow 2 will be set automatically from the runTimeMaxMinutes -->
    <framesPerOutfile>-1</framesPerOutfile> <!-- Max frames written to output NetCDF file before rotating to new file. Great for long running simulations -->
    <restartInterval>-1</restartInterval> <!-- Output frequency of restart files in minutes -->
    
    <DomainConfiguration>
      <locNorth>-35.11</locNorth>
      <locSouth>-34.19</locSouth>
      <locEast>139.65</locEast>
      <locWest>139.41</locWest>
      
      <maxDom>2</maxDom>
      
      <dx>4000</dx>
      <dy>4000</dy>
      <gridRatio>5</gridRatio>
      <timestepRatio>5</timestepRatio>
      
      <feedback>true</feedback>
      <feedbackSmoothing>1</feedbackSmoothing>
    </DomainConfiguration>
  </RunConfiguration>
  
  <ArchiveLocations>
    <!-- Filters use a RegEx expression -->
    <RestartDomain>
      <filter>wrfrst_d.*</filter>
      <destinationDirectory>models/wrf/lowerlakes/Archive/Restart</destinationDirectory>
    </RestartDomain>
    <ArchiveDomain>
      <filter>wrfout_d01.*</filter>
      <destinationDirectory>models/wrf/lowerlakes/Archive/Domain1</destinationDirectory>
    </ArchiveDomain>
    <ArchiveDomain>
      <filter>wrfout_d02.*</filter>
      <destinationDirectory>models/wrf/lowerlakes/Archive/Domain2</destinationDirectory>
    </ArchiveDomain>
  </ArchiveLocations>
  
  <!-- 
    Provide the data source to minimise download time (otherwise defaults will 
    be used that capture everything).
  -->
  <GFSSources>
    <dataSources>
        <name>UCAR-manual</name>
        <type>manual</type>
        <protocol>unknown</protocol>
        <url></url>
        <dateFormat>'fnl'_yyyyMMdd_HH_mm'.grib2'</dateFormat>
    </dataSources>
    <dataSources>
        <name>NCDC-gfsanl</name>
        <type>reanalysed</type>
        <protocol>gfs-ncdc</protocol>
        <url>https://nomads.ncdc.noaa.gov/data/gfsanl</url>
    </dataSources>
  </GFSSources>
</WRFRun>
